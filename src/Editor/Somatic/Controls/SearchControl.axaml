<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Somatic.Controls.SearchControl"
			 x:Name="Root">
	<StackPanel>
		<TextBox BorderThickness="0"
				 Classes="searchButton clearButton"
				 Text="{Binding SearchText, ElementName=Root}"
				 Watermark="{Binding SearchWatermark, ElementName=Root}"/>

		<ListBox ItemsSource="{Binding FilteredItems, ElementName=Root}"
				 SelectedItem="{Binding SelectedItem, ElementName=Root, Mode=TwoWay}"
				 ItemTemplate="{Binding ItemTemplate, ElementName=Root}"/>
	</StackPanel>
</UserControl>
