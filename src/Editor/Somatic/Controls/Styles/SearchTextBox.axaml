<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Design.PreviewWith>
		<Border Padding="20">
			<TextBox Classes="searchButton" Watermark="Buscar..."/>
		</Border>
	</Design.PreviewWith>

	<Style Selector="TextBox.searchButton">
		<Setter Property="InnerLeftContent">
			<Template>
				<Button Theme="{StaticResource FluentTextBoxButton}">
					<PathIcon Data="{StaticResource magnify_icon}" Height="10" Width="10"/>
				</Button>
			</Template>
		</Setter>
	</Style>
</Styles>
