<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:Somatic.ViewModels"
			 xmlns:ctrl="using:Somatic.Controls"
			 xmlns:ext="using:Somatic.Extensions"
			 x:DataType="vm:InformationViewModel"
             x:Class="Somatic.Views.InformationView">
	<UserControl.DataContext>
		<vm:InformationViewModel/>
	</UserControl.DataContext>

	<StackPanel>
		<Grid RowDefinitions="auto,*"
			  Margin="8">
			<Grid Grid.Row="0" ColumnDefinitions="auto,*" Margin="0,0,0,8">
				<CheckBox Grid.Column="0"
						  Content="Â¿Activo?"
						  IsChecked="{Binding Node.Entity.IsActive}"
						  Margin="0,0,8,0"/>
				<TextBox Grid.Column="1"
						 Text="{Binding Node.Name}"
						 Watermark="Nombre"/>
			</Grid>
			
			<ctrl:ComponentListControl Grid.Row="1"/>
		</Grid>
	</StackPanel>
</UserControl>
