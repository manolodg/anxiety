<ctrl:ComponentControl xmlns="https://github.com/avaloniaui"
					   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					   xmlns:ctrl="using:Somatic.Controls"
					   xmlns:m="using:Somatic.Model"
					   x:DataType="m:ScriptComponent"
					   x:Class="Somatic.Views.ScriptComponentView"
					   Title="{Binding Name}">
	<ctrl:ComponentControl.InnerContent>
		<ItemsControl ItemsSource="{Binding Parameters}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>

			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Border Background="Transparent"
							Margin="0,8">
						<TextBox Text="{Binding Name}"/>
					</Border>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</ctrl:ComponentControl.InnerContent>
</ctrl:ComponentControl>
