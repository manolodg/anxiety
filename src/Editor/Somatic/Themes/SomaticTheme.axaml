<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:sys="using:System"
					xmlns:ctrl="using:Somatic.Controls">
	<Design.PreviewWith>
		<StackPanel Width="400" Height="600" Spacing="10">
			<ThemeVariantScope RequestedThemeVariant="Default">
				<StackPanel Spacing="10" Background="{DynamicResource SystemRegionBrush}">
					<TextBlock Text="Tema Default"/>
					
					<ctrl:ComponentControl/>
				</StackPanel>
			</ThemeVariantScope>
			
			<ThemeVariantScope RequestedThemeVariant="Light">
				<StackPanel Spacing="10" Background="{DynamicResource SystemRegionBrush}">
					<TextBlock Text="Tema Light"/>

					<ctrl:ComponentControl/>
				</StackPanel>
			</ThemeVariantScope>
			
			<ThemeVariantScope RequestedThemeVariant="Dark">
				<StackPanel Spacing="10" Background="{DynamicResource SystemRegionBrush}">
					<TextBlock Text="Tema Dark"/>

					<ctrl:ComponentControl/>
				</StackPanel>
			</ThemeVariantScope>
		</StackPanel>
	</Design.PreviewWith>

	<ResourceDictionary.ThemeDictionaries>
		<!-- Default ========================================================== -->
		<ResourceDictionary x:Key="Default">
			<!-- Component Control ____________________________________________ -->
			<SolidColorBrush x:Key="ComponentControlBackground" Color="#FFFFFF"/>
			<SolidColorBrush x:Key="ComponentControlBorderBrush" Color="#E0E0E0"/>
			<SolidColorBrush x:Key="ComponentHeaderBackground" Color="#F5F5F5"/>
			<SolidColorBrush x:Key="ComponentBodyBackground" Color="#FFFFFF"/>
			<!-- ____________________________________________ Component Control -->

			<!-- Colores de Fondo _____________________________________________ -->
			<SolidColorBrush x:Key="BgPrimary">#1e1e1e</SolidColorBrush>
			<SolidColorBrush x:Key="BgSecondary">#2d2d2d</SolidColorBrush>
			<SolidColorBrush x:Key="BgTertiary">#383838</SolidColorBrush>
			<SolidColorBrush x:Key="BgAccent">#404040</SolidColorBrush>
			<!-- _____________________________________________ Colores de Fondo -->

			<!-- Colores de Texto _____________________________________________ -->
			<SolidColorBrush x:Key="TextPrimary">#e0e0e0</SolidColorBrush>
			<SolidColorBrush x:Key="TextSecondary">#b0b0b0</SolidColorBrush>
			<SolidColorBrush x:Key="TextDisabled">#666666</SolidColorBrush>
			<SolidColorBrush x:Key="TextOnAccent">#ffffff</SolidColorBrush>
			<!-- _____________________________________________ Colores de Texto -->

			<!-- Colores de Borde _____________________________________________ -->
			<SolidColorBrush x:Key="BorderColor">#4a4a4a</SolidColorBrush>
			<SolidColorBrush x:Key="BorderHover">#5a5a5a</SolidColorBrush>
			<SolidColorBrush x:Key="BorderActive">#0071e3</SolidColorBrush>
			<SolidColorBrush x:Key="BorderFocus">#0071e3</SolidColorBrush>
			<!-- _____________________________________________ Colores de Borde -->

			<!-- Colores de Acento ____________________________________________ -->
			<SolidColorBrush x:Key="AccentBlue">#0071e3</SolidColorBrush>
			<SolidColorBrush x:Key="AccentBlueHover">#005bb5</SolidColorBrush>
			<SolidColorBrush x:Key="AccentBluePressedBrush">#004080</SolidColorBrush>
			<SolidColorBrush x:Key="AccentOrange">#ff6b35</SolidColorBrush>
			<SolidColorBrush x:Key="AccentGreen">#4caf50</SolidColorBrush>
			<SolidColorBrush x:Key="AccentRed">#f44336</SolidColorBrush>
			<SolidColorBrush x:Key="AccentYellow">#ffb300</SolidColorBrush>
			<!-- ____________________________________________ Colores de Acento -->

			<!-- Overlay y Selección __________________________________________ -->
			<SolidColorBrush x:Key="OverlayHover">#0dffffff</SolidColorBrush>
			<SolidColorBrush x:Key="OverlayPressed">#1affffff</SolidColorBrush>
			<SolidColorBrush x:Key="SelectionBackground">#330071e3</SolidColorBrush>
			<SolidColorBrush x:Key="SelectionBorder">#0071e3</SolidColorBrush>
			<!-- __________________________________________ Overlay y Selección -->

			<!-- Dimensiones __________________________________________________ -->
			<x:Double x:Key="ControlHeightSmall">20</x:Double>
			<x:Double x:Key="ControlHeightNormal">24</x:Double>
			<x:Double x:Key="ControlHeightMedium">28</x:Double>
			<x:Double x:Key="ControlHeightLarge">32</x:Double>
			<!-- __________________________________________________ Dimensiones -->

			<!-- Radio de Esquinas ____________________________________________ -->
			<CornerRadius x:Key="CornerRadiusSmall">2</CornerRadius>
			<CornerRadius x:Key="CornerRadiusMedium">4</CornerRadius>
			<CornerRadius x:Key="CornerRadiusLarge">6</CornerRadius>
			<!-- ____________________________________________ Radio de Esquinas -->

			<!-- Espaciado ____________________________________________________ -->
			<Thickness x:Key="SpacingXS">2</Thickness>
			<Thickness x:Key="SpacingSM">4</Thickness>
			<Thickness x:Key="SpacingBase">6</Thickness>
			<Thickness x:Key="SpacingLG">8</Thickness>
			<Thickness x:Key="SpacingXL">12</Thickness>
			<!-- ____________________________________________________ Espaciado -->

			<!-- Padding para Controles _______________________________________ -->
			<Thickness x:Key="ButtonPadding">6,4</Thickness>
			<Thickness x:Key="ButtonPaddingSmall">4,2</Thickness>
			<Thickness x:Key="InputPadding">6,4</Thickness>
			<Thickness x:Key="TabPadding">12,4</Thickness>
			<Thickness x:Key="TabVerticalPadding">12,6</Thickness>
			<!-- _______________________________________ Padding Para Controles -->

			<!-- Fuentes ______________________________________________________ -->
			<x:Double x:Key="FontSizeXS">11</x:Double>
			<x:Double x:Key="FontSizeSM">12</x:Double>
			<x:Double x:Key="FontSizeBase">13</x:Double>
			<x:Double x:Key="FontSizeLG">14</x:Double>
			<!-- ______________________________________________________ Fuentes -->

			<!-- Grosores de Borde ____________________________________________ -->
			<Thickness x:Key="BorderThickness">1</Thickness>
			<Thickness x:Key="FocusBorderThickness">2</Thickness>
			<!-- ____________________________________________ Grosores de Borde -->

			<!-- Sombras ______________________________________________________ -->
			<BoxShadows x:Key="ShadowNormal">0 1 3 0 #4c000000</BoxShadows>
			<BoxShadows x:Key="ShadowHover">0 2 6 0 #66000000</BoxShadows>
			<!-- ______________________________________________________ Sombras -->

			<!-- Duración de Transiciones _____________________________________ -->
			<sys:TimeSpan x:Key="TransitionDuration">0:0:0.15</sys:TimeSpan>
			<sys:TimeSpan x:Key="TransitionDurationSlow">0:0:0.3</sys:TimeSpan>
