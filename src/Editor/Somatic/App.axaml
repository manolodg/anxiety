<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:Somatic"
             x:Class="Somatic.App"
             RequestedThemeVariant="Default">
	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>
	
    <Application.Styles>
        <FluentTheme />
		<DockFluentTheme/>

		<StyleInclude Source="/Themes/Icons.axaml"/>
		
		<StyleInclude Source="/Controls/Styles/SearchTextBox.axaml"/>
    </Application.Styles>
	
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Themes/SomaticTheme.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>